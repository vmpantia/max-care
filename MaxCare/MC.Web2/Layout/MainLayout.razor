@using MC.Web.Extensions
@using MC.Web.Models.UI
@inherits LayoutComponentBase

<Layout>
    <Sider Class="sidebar">
        <div class="logo" />
        <Menu Theme="MenuTheme.Dark" 
              Mode="MenuMode.Inline" DefaultSelectedKeys=@(new[] { _sidebarItems.First().Key })>
            @foreach(var item in _sidebarItems)
            {
                <MenuItem Key="@item.Key" Icon="@item.Icon" RouterLink="@item.Link">@item.Title</MenuItem>
            }
        </Menu>
    </Sider>
    <Layout Class="site-layout">
        <Header Class="site-layout-header">
        </Header>
        <Breadcrumb Class="site-layout-bread-crumb">
            <BreadcrumbItem>Home</BreadcrumbItem>
            <BreadcrumbItem>List</BreadcrumbItem>
            <BreadcrumbItem>App</BreadcrumbItem>
        </Breadcrumb>
        <Content Class="site-layout-content">
            @Body
        </Content>
    </Layout>
</Layout>

<style>
    .sidebar {
        height: 100vh;
        position: sticky;
        top: 0;
    }
    .logo {
        height: 32px;
        margin: 16px;
    }
    .site-layout .site-layout-header {
        background: #fff;
        padding-left: 24px;
    }
    .site-layout .site-layout-bread-crumb {
        margin: 16px 16px 0px 16px;
    }
    .site-layout .site-layout-content {
        background: #fff;
        margin: 16px;
        padding: 24px;
        min-height: 280px;
    }
</style>

@code {
    private IEnumerable<SidebarItem> _sidebarItems = UIExtension.GetSidebarItems();
}